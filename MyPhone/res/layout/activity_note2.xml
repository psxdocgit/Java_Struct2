<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <Button
            android:id="@+id/note2BackBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.16"
            android:onClick="note2BackBtnClick"
            android:text="Back" />
        
        <Button
            android:id="@+id/note2SearchBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.16"
            android:onClick="note2SearchBtnClick"
            android:text="Search" />

        <Button
            android:id="@+id/note2SaveBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.16"
            android:onClick="note2SaveBtnClick"
            android:text="Save" />

        <Button
            android:id="@+id/note2DelBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.16"
            android:onClick="note2DelBtnClick"
            android:text="Del" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/note2TVTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="主题" />

        <EditText
            android:visibility="gone"
            android:id="@+id/note2ETid"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10" />

        <EditText
            android:id="@+id/node2ETTitle"
            android:singleLine="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ems="10" />
    </LinearLayout>

    <EditText
        android:id="@+id/node2ETText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="top|left"
        android:layout_weight="0.21"
        android:ems="10" >

        <requestFocus />
    </EditText>

</LinearLayout>